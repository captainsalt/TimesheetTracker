<Window x:Class="TimesheetTracker.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimesheetTracker.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900" MinWidth="700" MinHeight="255">

    <StackPanel Margin="1">
        <UniformGrid Columns="3" Height="50">
            <Button Margin="1" Command="{Binding ShowJsonConfigCommand}">Show Project JSON</Button>
            <Button Margin="1" Command="{Binding LoadProjectsCommand}">Load Projects</Button>
            <Button Margin="1" Command="{Binding FillSheetCommand}">Fill Timesheet</Button>
        </UniformGrid>

        <!--Project View Models -->
        <ItemsControl Margin="1" ItemsSource="{Binding ProjectViewModels}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0 2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="40"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Project Name-->
                        <TextBlock Grid.Column="0" FontSize="18" FontWeight="Medium" Text="{Binding Project.Name}" Width="100"/>

                        <!--Days-->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding Days}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="31"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBox FontWeight="Medium" FontSize="18" TextAlignment="Center" Text="{Binding Hours, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--Total Hours-->
                        <TextBlock Grid.Column="2" HorizontalAlignment="Right" Margin="5 0" FontWeight="Medium" Text="{Binding TotalHours}" FontSize="18"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
</Window>
