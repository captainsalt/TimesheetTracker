<Window x:Class="TimesheetTracker.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimesheetTracker.WPF"
        mc:Ignorable="d"
        Title="Timesheet Tracker"  MinWidth="820" MinHeight="300">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <StackPanel Margin="1" Grid.IsSharedSizeScope="True">
        <UniformGrid Columns="3" Height="50">
            <Button Margin="1" Command="{Binding SaveTimesheetCommand}">Save Timesheet</Button>
            <Button Margin="1" Command="{Binding LoadTimesheetCommand}">Load Timesheet</Button>
            <Button Margin="1" Command="{Binding OpenTimesheetDirectoryCommand}">Open Timesheet Directory</Button>
        </UniformGrid>

        <!--Days-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Projects" MaxWidth="200"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition SharedSizeGroup="Hours"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ItemsControl Grid.Column="1" ItemsSource="{Binding ProjectViewModels[0].Days}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding ProjectViewModels[0].Days.Count}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Label HorizontalAlignment="Center" FontWeight="Bold" Content="{Binding Day.Date}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <!--Project View Models -->
        <ItemsControl Margin="1" ItemsSource="{Binding ProjectViewModels}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="Projects" MaxWidth="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition SharedSizeGroup="Hours"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Project Name-->
                        <TextBlock Grid.Column="0" VerticalAlignment="Bottom" FontSize="18" FontWeight="Medium" Text="{Binding Name}" Margin="0 0 5 0"/>

                        <!--Days-->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding Days}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding Days.Count}" Height="30"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                        <TextBox
                                             FontWeight="Medium" 
                                             FontSize="18"
                                             TextAlignment="Center" 
                                             IsEnabled="{Binding IsActive}"
                                             Text="{Binding Hours, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--Total Hours-->
                        <TextBlock Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Medium" FontSize="18" Margin="2 0">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}/{1} ({2})">
                                    <Binding Path="WorkHoursLeft" />
                                    <Binding Path="MaxHours" />
                                    <Binding Path="TotalWorkedHours" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Window>
