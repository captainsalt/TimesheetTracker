<Window x:Class="TimesheetTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimesheetTracker"
        xmlns:controls="clr-namespace:TimesheetTracker.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Margin="0 1" Click="Button_Click">Add Project</Button>

        <StackPanel Margin="0 1" Name="projects" Grid.Row="2">
            <controls:ProjectEntry Margin="0 1" />
            <controls:ProjectEntry Margin="0 1" />
            <controls:ProjectEntry Margin="0 1" />
        </StackPanel>
    </Grid>
</Window>