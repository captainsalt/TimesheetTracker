<Window x:Class="TimesheetTracker.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimesheetTracker.WPF"
        mc:Ignorable="d"
        Title="Timesheet Tracker"  MinWidth="1200" MinHeight="450">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <StackPanel Margin="1">
        <UniformGrid Columns="2" Height="50">
            <Button Margin="1" Command="{Binding SaveTimesheetCommand}">Save Timesheet</Button>
            <Button Margin="1" Command="{Binding LoadTimesheetCommand}">Load Timesheet</Button>
        </UniformGrid>

        <!--Project View Models -->
        <ItemsControl Margin="1" ItemsSource="{Binding ProjectViewModels}" Grid.IsSharedSizeScope="True">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0 2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" SharedSizeGroup="Projects" MaxWidth="200"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*" SharedSizeGroup="Hours"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Project Name-->
                        <TextBlock Grid.Column="0" VerticalAlignment="Bottom" FontSize="18" FontWeight="Medium" Text="{Binding Project.Name}" Margin="0 0 5 0"/>

                        <!--Days-->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding Days}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding Days.Count}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Label IsEnabled="{Binding IsActive}" FontWeight="Medium" Content="{Binding Day.Date}" HorizontalContentAlignment="Center"></Label>
                                        <TextBox
                                             FontWeight="Medium" 
                                             FontSize="18" 
                                             TextAlignment="Center" 
                                             IsEnabled="{Binding IsActive}"
                                             Text="{Binding Hours, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--Total Hours-->
                        <TextBlock Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Medium" FontSize="18" Margin="2 0">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}/{1} ({2})">
                                    <Binding Path="TotalWorkedHours" />
                                    <Binding Path="MaxHours" />
                                    <Binding Path="WorkHoursLeft" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
</Window>
