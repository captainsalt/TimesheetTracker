<UserControl x:Class="TimesheetTracker.Controls.ProjectEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimesheetTracker.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800" d:Background="White" d:Padding="10">

    <Grid Height="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBox Height="auto" Grid.Column="0" Text="Project 1" FontSize="20"/>

        <StackPanel Name="dailyHoursStack" Orientation="Horizontal" Grid.Column="1">
        </StackPanel>
    </Grid>
</UserControl>
